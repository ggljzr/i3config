# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks
	strip_workspace_numbers yes	
	position top
	#font -xos4-terminus-medium-r-normal--16-160-72-72-c-80-iso10646-1
	font pango:Terminus 12

	separator_symbol "|"

	height 25

	colors{
		separator $darkRed
		background $background
		statusline $white 

		focused_workspace $darkGreen $darkGreen $white
		active_workspace $darkRed $darkRed $white
		inactive_workspace $background $background $white
		urgent_workspace $darkMagenta $darkMagenta $white
	}
}



