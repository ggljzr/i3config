set background=dark

hi clear
if exists("syntax on")
	syntax reset
endif

let g:colors_name = 'redmond'

hi Normal ctermfg=white ctermbg=None
hi Comment ctermfg=Green ctermbg=None
hi Constant ctermfg=Cyan ctermbg=None 
hi Operator ctermfg=Blue ctermbg=None
hi Statement ctermfg=Blue ctermbg=None cterm=bold
hi Special ctermfg=Yellow ctermbg=None cterm=bold
hi Visual ctermfg=white ctermbg=darkRed
hi Search ctermfg=white ctermbg=darkRed
hi Function ctermfg=red ctermbg=None cterm=bold
hi LineNr ctermfg=red ctermbg=None
hi Type ctermfg=green cterm=bold
hi Preproc ctermfg=magenta cterm=bold

hi VertSplit ctermfg=darkRed ctermbg=darkRed cterm=bold 
hi StatusLine ctermfg=white ctermbg=darkRed cterm=bold
hi StatusLineNC ctermfg=white ctermbg=darkBlue cterm=bold

hi TabLineSel ctermbg=red ctermfg=white cterm=bold
hi TabLine ctermbg=darkRed ctermfg=white cterm=bold
hi TabLineFill ctermfg=grey ctermbg=darkRed cterm=bold

hi Title ctermfg=red
hi CursorLine ctermbg=red ctermfg=blue cterm=bold
hi NERDTreeDir ctermfg=Green
hi NERDTreeDirSlash ctermfg=Red cterm=bold
hi NERDTreeUp ctermfg=Magenta
hi NERDTreeHelp ctermfg=Cyan cterm = bold

hi Pmenu ctermfg=white ctermbg=DarkRed
hi PmenuSel ctermfg=white ctermbg=darkBlue cterm=bold


